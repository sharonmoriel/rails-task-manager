
<div class="container">
  <div class="d-flex justify-content-between my-3">
    <h1><%= @task.title %></h1>
    <p class="btn btn-primary rounded">
      <%= link_to edit_task_path(@task) do %>
        <i class="fas fa-pencil"> Edit this task</i>
      <% end %>
    </p>
  </div>

    <div class="jumbotron p-4 align-middle">
      <p class="lead"><%= @task.details %></p>
    </div>

  <% if @task.completed %>
    <input checked type="checkbox" onclick="return false;"> This task is completed
  <% else %>
    <input type="checkbox" onclick="return false;"> This task is not completed yet
  <% end  %>
  <hr>
  <p class="mt-3"><i class="fas fa-undo-alt"><%= link_to ' Back to the list', tasks_path %></i></p>
</div>

