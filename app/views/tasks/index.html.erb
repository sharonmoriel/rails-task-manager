<div class="container">
  <h1>My Tasks ðŸ“‹</h1>
  <table>
    <% @tasks.each do |t| %>
    <tr>
      <td>
        <% t.completed ? done = 'checked' : done = '' %>
        <input <%=done%> type="checkbox" onclick="return false;">
        <%= link_to t.title, task_path(t)%> -
        <%= link_to task_path(t), method: :delete, data: {confirm: "Are you sure?"} do %>
        <i class="far fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
  <hr>
  <p>
    <i class="fas fa-plus">
      <%= link_to ' Add a new task', new_task_path %>
    </i>
  </p>
</div>


